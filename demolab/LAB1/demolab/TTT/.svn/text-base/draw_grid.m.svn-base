function drawgrid(f1,f2)

if nargin==0
  f1='Första draget';
  f2='Andra draget';
end
%clf
cla
%axis off
axis([0 4 0 4])
axis('image')
line([0.5 0.5],[ 0.5 3.5])
line([1.5 1.5],[ 0.5 3.5])
line([2.5 2.5],[ 0.5 3.5])
line([3.5 3.5],[ 0.5 3.5])
line([0.5 3.5],[ 0.5 0.5])
line([0.5 3.5],[ 1.5 1.5])
line([0.5 3.5],[ 2.5 2.5])
line([0.5 3.5],[ 3.5 3.5])
text(1.5,4,[f1 ': X'])
text(1.5,3.8,[f2 ': O'])
%text(0.5,0.4,'© Magnus Borga, Jörgen Karlholm & Tomas Landelius','FontName','Times','FontAngle','italic','FontSize',8)
axis([0 4 0 4])
axis('image')
drawnow